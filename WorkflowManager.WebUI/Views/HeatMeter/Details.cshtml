	@Html.EditorFor(m => m.DemountedHeatMeterNum, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
</div>
<div class="form-group">
	@Html.LabelFor(m => m.MountedHeatMeterNum)
	@Html.EditorFor(m => m.MountedHeatMeterNum, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
</div>
<div class="form-group">
