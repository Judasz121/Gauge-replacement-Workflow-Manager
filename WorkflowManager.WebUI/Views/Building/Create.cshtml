@model BuildingCreateViewModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nowy Budynek</h1>
<hr />
@using (Html.BeginForm("Create", "Building", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()


	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.Building.City, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.City, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Building.City, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Building.Street, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.Street, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Building.Street, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Building.AddressBuildingNum, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.AddressBuildingNum, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Building.AddressBuildingNum, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Building.AdditionalAddress, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.AdditionalAddress, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Building.AdditionalAddress, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Building.DateWorkStart, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.DateWorkStart, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Building.DateWorkStart, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Building.PredictedWorkEndDate, htmlAttributes: new { @class = "control-label" })
		@Html.EditorFor(m => m.Building.PredictedWorkEndDate, new { htmlAttributes = new { @class = "form-control"} })
		@Html.ValidationMessageFor(m => m.Building.PredictedWorkEndDate, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.SelectedUsersIds, htmlAttributes: new { @class = "control-label" })
		@Html.ListBoxFor(m => m.SelectedUsersIds, Model.Users, new { @class = "form-control", @id = "chosen", @multiple = true })
		@Html.ValidationMessageFor(m => m.SelectedUsersIds, "", new { @class = "text-danger" })
	</div>
	<div class="form-group submit-button-container">
		<span class="float-right">
			<button type="submit" class="btn btn-primary">Dodaj</button>
		</span>
	</div>
}