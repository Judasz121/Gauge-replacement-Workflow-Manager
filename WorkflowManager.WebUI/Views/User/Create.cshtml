@model UserCreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nowy Użytkownik</h1>
<hr />

<form asp-action="Create" asp-controller="User" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.User.UserName)
        @Html.EditorFor(m => m.User.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.FirstName)
        @Html.EditorFor(m => m.User.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.User.FirstName, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.LastName)
        @Html.EditorFor(m => m.User.LastName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.User.LastName, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.Email)
        @Html.EditorFor(m => m.User.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.User.Email, "", new { @class = "text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.PhoneNumber)
        @Html.EditorFor(m => m.User.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.User.PhoneNumber, "", new { @class = "form-text text-danger" } )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedRolesIds)
        @Html.ListBoxFor(model => model.SelectedRolesIds, Model.Roles, new { @multiple = "", @class = "form-control", @id = "chosen" })
        @Html.ValidationMessageFor(model => model.SelectedRolesIds, "", new { @class = "form-text text-danger" } )
    </div>

    <div class="form-group submit-button-container">
        <span class="float-right">
            <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
        </span>
    </div>
</form>